{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node"
        },
        {
            "src": "public/**",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
}